<div class="p-2 flex gap-2">
  <%= render NangkaUI::Tabs.new default_value: "account", class: "w-[400px]", data: { controller: "nangkaui--tabs" } do |tab| %>
    <% tab.list class: "grid w-full grid-cols-2" do |l| %>
      <% l.trigger(value: "account") { "Account" } %>
      <% l.trigger(value: "password") { "Password" } %>
    <% end %>
    <% tab.content value: "account" do %>
      Account Content
    <% end %>
    <% tab.content value: "password" do %>
      Password Content
    <% end %>
  <% end %>
</div>
